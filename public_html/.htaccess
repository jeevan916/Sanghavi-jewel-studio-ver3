
# ----------------------------------------------------------------------
# | Hostinger/LiteSpeed Optimization for Sanghavi Studio               |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 1. API Passthrough: Let Node.js handle /api requests
  RewriteRule ^api/ - [L]

  # 2. Serve existing files in root (uploads, etc) directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Intelligent Asset Routing: 
  # If a requested file exists in /dist, serve it from there.
  # This handles /assets/..., /favicon.ico, etc.
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L]

  # 4. Root URL Fix: Explicitly serve the app entry point
  RewriteRule ^$ dist/index.html [L]

  # 5. SPA Catch-All: Route everything else to the app entry point
  RewriteRule ^.*$ dist/index.html [L]
</IfModule>

# ----------------------------------------------------------------------
# | MIME Types for Next-Gen Images                                     |
# ----------------------------------------------------------------------
<IfModule mod_mime.c>
  AddType image/webp .webp
  AddType image/avif .avif
</IfModule>

# ----------------------------------------------------------------------
# | Browser Caching (Hostinger CDN Friendly)                           |
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css|css|js|webp|avif|png|jpg|jpeg|gif|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
