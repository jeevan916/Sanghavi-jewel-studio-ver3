
# ----------------------------------------------------------------------
# | Hostinger/LiteSpeed Optimization for Sanghavi Studio               |
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 1. API Passthrough: Proxy /api requests to Node.js server
  RewriteRule ^api/(.*)$ http://127.0.0.1:3000/api/$1 [P,L]

  # 2. Uploads Passthrough: Proxy /uploads requests to Node.js server
  RewriteRule ^uploads/(.*)$ http://127.0.0.1:3000/uploads/$1 [P,L]

  # 3. Priority: Production Assets
  # If the requested file exists in /dist, serve it from there.
  # This handles /assets/..., /favicon.ico, /sw.js, etc.
  RewriteCond %{DOCUMENT_ROOT}/dist/$1 -f
  RewriteRule ^(.*)$ dist/$1 [L]

  # 4. Secondary: Root Static Files
  # Allow serving existing files in root, BUT EXCLUDE index.html (source file).
  RewriteCond %{REQUEST_URI} !^/index\.html$
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 5. SPA Catch-All (The Fix)
  # Route everything else (/, /index.html, /shared/...) to the production entry point.
  RewriteRule ^ dist/index.html [L]
</IfModule>

# ----------------------------------------------------------------------
# | MIME Types for Next-Gen Images                                     |
# ----------------------------------------------------------------------
<IfModule mod_mime.c>
  AddType image/webp .webp
  AddType image/avif .avif
</IfModule>

# ----------------------------------------------------------------------
# | Browser Caching (Hostinger CDN Friendly)                           |
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css|css|js|webp|avif|png|jpg|jpeg|gif|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
